<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaActivity" >

    <fragment
        android:id="@+id/mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment" />

    <RadioGroup
        android:id="@+id/radio_group_list_selector"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="4dp" >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_signin_btn_icon_pressed_light"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick_tipo1"
            android:textColor="@color/Verde" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_signin_btn_text_dark"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick_Satelite"
            android:textColor="@color/Preto" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <ImageButton
            android:id="@+id/radioCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/onibus"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick_MapaConsultarLinha"
            android:textColor="@color/Azul" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#aaa" />

        <Button
            android:id="@+id/radioNearBy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_signin_btn_icon_focus_light"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/Vermelho" 
            android:onClick="exibirTodasAsParadas"/>
    </RadioGroup>

</FrameLayout>